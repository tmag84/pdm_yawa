<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_credits"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="isel.pdm.yawa.presentation.CreditsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main"/>

    <TextView
        android:text="@string/credits_authors_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/authors_label"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/credits_author1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/author1_name"
        android:layout_below="@+id/authors_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/openweathermap_logo"
        android:id="@+id/openweathermap_icon"
        android:contentDescription="@string/credits_openweatharmaplogo_description"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
